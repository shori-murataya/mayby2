- if current_user.following? @user
  = form_for current_user.active_relationships.find_by(followed_id: @user.id), method: "delete", remote: true do |f|
    = f.submit "フォロー外す", class: "unfollow-btn"
- else
  = form_for current_user.active_relationships.build, method: "post", remote: true do |f|
    = hidden_field_tag :followed_id, @user.id
    = f.submit "フォローする", class: "follow-btn"